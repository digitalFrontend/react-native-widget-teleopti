<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_rect_widget"
    android:gravity="top">
        <LinearLayout
            android:id="@+id/widgetRootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingTop="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/todayDate"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_rect_widget"
                    android:fontFamily="@font/text_bold_widget"
                    android:textStyle="bold"
                    android:textColor="#1f2229"
                    android:text=""
                    android:textSize="16sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/todayDuration"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:background="@drawable/shadow_rect_widget"
                    android:fontFamily="@font/text_bold_widget"
                    android:textStyle="bold"
                    android:textColor="#1f2229"
                    android:text=""
                    android:textSize="16sp"
                    android:textAllCaps="true"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="14dp"
                android:paddingTop="6dp">
                <TextView
                    android:id="@+id/updateDate"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shadow_rect_widget"
                    android:fontFamily="@font/text_reg_widget"
                    android:textColor="#73767A"
                    android:text=""
                    android:textSize="16sp" />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/noData"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_rect_widget">
                    <TextView
                        android:gravity="left"
                        android:textAlignment="gravity"
                        android:layout_marginHorizontal="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow_rect_widget"
                        android:fontFamily="@font/text_reg_widget"
                        android:textColor="#1f2229"
                        android:text="Здесь отражается расписание для сотрудников дистанционного сервиса"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/noShedule"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_rect_widget">
                    <TextView
                        android:gravity="left"
                        android:textAlignment="gravity"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow_rect_widget"
                        android:fontFamily="@font/text_reg_widget"
                        android:textColor="#1f2229"
                        android:text="Проверьте интернет-соединение и перезайдите в приложение «На\u00A0связи»"
                        android:textSize="17sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/dayoff"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:orientation="vertical"
                    android:background="@drawable/shadow_rect_widget"
                    tools:ignore="ExtraText">
                    <TextView
                        android:id="@+id/dayoffTitle"
                        android:gravity="left"
                        android:textAlignment="gravity"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginTop="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow_rect_widget"
                        android:fontFamily="@font/text_bold_widget"
                        android:textStyle="bold"
                        android:textColor="#1f2229"
                        android:text=""
                        android:textSize="17sp"
                        />
                    <TextView
                        android:id="@+id/dayoffSubtitle"
                        android:gravity="left"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shadow_rect_widget"
                        android:fontFamily="@font/text_reg_widget"
                        android:textColor="#73767A"
                        android:text=""
                        android:textSize="17sp" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/listContent"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/shadow_rect_widget"
                    android:orientation="vertical"
                    android:paddingHorizontal="14dp"
                    android:paddingVertical="12dp" >
                    <ListView
                        android:id="@+id/lvList"
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:headerDividersEnabled="false"
                        android:footerDividersEnabled="false"
                        android:dividerHeight="0dp"
                        android:divider="@null">

                    </ListView>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
</RelativeLayout>


